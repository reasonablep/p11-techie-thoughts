

<div class = "font-mono flex-col justify-center">
    <div>
      <h2 class="text-2xl mb-7">Please Login to Post</h2>

      <form class ='login-form mb-7'>
        <div>
          <label>Email:</label><br>
          <input class ="border-2 border-amber-800" type="text" id="email-login" placeholder="Enter your email" />
        </div>
        <div>
          <label>Password:</label><br>
          <input class ="border-2 border-amber-800" type="password" id="password-login" placeholder="Enter your password" />
        </div>
        <div>
          <button type="submit" class="border text-amber-800">Login</button>
        </div> 
      </form>

      <h2 id="acc-signup">I need an account</h2>
      <div id="hide-signup">
        <form class = "signup-form mb-7">
          <div>
            <label id="username-label">Username must be between 6 -18 characters</label><br>
            <input class ="border-2 border-amber-800" type="text" id="name-signup" placeholder="Enter your username" />
          </div>
          <div>
            <label id="email-label">Email:</label><br>
            <input class ="border-2 border-amber-800" type="text" id="email-signup" placeholder="Enter your email"/>
          </div>
          <div>
            <label id="password-label">Password must be at least 8 characters long including numbers</label><br>
            <input class ="border-2 border-amber-800" type="password" id="password-signup" placeholder="Enter your password" />
          </div>
          <div>
            <label id="pw-tryagain">Please re-enter your password</label><br>
            <input class ="border-2 border-amber-800" type="password" id="password-signup2" placeholder="Re-enter password"/>
          </div>
          <div>
            <button id="createBtn" type="submit" class="border text-amber-800">Create Account</button>
          </div>
        </form>

      </div>
    </div>
  </div>
</div>

<script src="./login.js"></script>